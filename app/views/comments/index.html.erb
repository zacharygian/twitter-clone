<h1>All the comments for this tweet</h1>

<% @comments.each do |comment| %>
  <p>Comment by: <%= comment.user.username %></p>
  <%= comment.text %>
  <% if comment.user_id == current_user.id %>
    <%= link_to tweet_comment_path(@tweet, comment), :method => :delete, data: {:confirm => "Are you sure you want to delete your comment?" } do %>
      <p> Delete </p>
    <% end %>
  <% end %>
<% end %>
