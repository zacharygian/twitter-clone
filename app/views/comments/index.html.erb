<h1>Leave a comment for...</h1>
<h2>"<%= @tweet.content %>"</h2>
<% @tweet.comments.each do |comment| %>
  <p> Comment by: <%= link_to user_path(comment.user) do %>
      <%= comment.user.username %>
    <% end %>
  <%= comment.text %>
  <% if comment.user_id == current_user.id %>
    <%= link_to "Delete", tweet_comment_path(@tweet, comment), :method => :delete, data: {:confirm => "Are you sure you want to delete your comment?" } %>
  <% end %>
  </p>
<% end %>
<%= pluralize(@tweet.comments.count, "Comment") %>
<%= simple_form_for [@tweet, @comment] do |f| %>
  <%= f.input :text, label: "Comment"  %>
  <%= f.button :submit, "Post Comment!" %>
<% end %>
